{
  "include": ["src"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    // ** Build
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,

    // ** Bundlder
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "declaration": true,
    // "emitDeclarationOnly": true,
    // "outDir": "./dist",
    "noEmit": true,

    // ** Lint
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
