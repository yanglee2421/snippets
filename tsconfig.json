{
  "include": ["src"],
  "compilerOptions": {
    // ** Build
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "skipLibCheck": true,

    // ** Bundlder
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",

    // ** Lint
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
